<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.TrainingFragment">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:padding="20dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/healthcare"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:text="Не тренируйтесь"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="при плохом"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="самочувствии"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ОЦЕНИТЬ СВОЕ СОСТОЯНИЕ"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ostrovsky_bold"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ostrovsky_bold"
                    android:gravity="center"
                    android:text="Выберете тип тренировки"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:layout_marginBottom="15dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginEnd="5dp">

                        <ImageButton
                            android:id="@+id/balancing_ib"
                            android:layout_width="90dp"
                            android:layout_height="118dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:src="@drawable/balancing_selected" />

                        <TextView
                            android:id="@+id/balancing_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Равновесие"
                            android:textColor="@color/green"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <ImageButton
                            android:id="@+id/endurance_ib"
                            android:layout_width="107dp"
                            android:layout_height="118dp"
                            android:background="@color/white"
                            android:scaleX="0.5"
                            android:layout_gravity="center"
                            android:scaleY="0.5"
                            app:srcCompat="@drawable/endurance" />

                        <TextView
                            android:id="@+id/endurance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Выносливость"
                            android:textColor="@color/pink"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <ImageButton
                            android:id="@+id/power_ib"
                            android:layout_width="101dp"
                            android:layout_height="118dp"
                            android:background="@color/white"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            app:srcCompat="@drawable/power"/>

                        <TextView
                            android:id="@+id/power_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Сила"
                            android:textColor="@color/pink"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Выберете сложность тренировки"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    android:fontFamily="@font/ostrovsky_bold"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginEnd="10dp"
                        >

                        <ImageButton
                            android:id="@+id/easy_ib"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@color/white"
                            android:scaleX="0.8"
                            android:layout_gravity="center"
                            android:scaleY="0.8"
                            android:src="@drawable/easy_selected" />

                        <TextView
                            android:id="@+id/easy_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Легкий"
                            android:textColor="@color/green"
                            android:textSize="14sp"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <ImageButton
                            android:id="@+id/norm_ib"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@color/white"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:srcCompat="@drawable/norm"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/norm_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Умеренный"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginStart="10dp">

                        <ImageButton
                            android:id="@+id/hard_ib"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:srcCompat="@drawable/hard"/>

                        <TextView
                            android:id="@+id/hard_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/ostrovsky_bold"
                            android:gravity="center"
                            android:text="Интенсивный"
                            android:textColor="@color/pink"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="НАЧАТЬ"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ostrovsky_bold"
            android:backgroundTint="@color/green"
            />
    </LinearLayout>




</ScrollView>